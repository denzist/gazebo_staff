<?xml version="1.0"?>
<launch>

  <include file="$(find buggy_gazebo)/launch/empty_world/empty_world.launch"/>

  <param name="robot_description"
   command="$(find xacro)/xacro.py '$(find buggy_description)/urdf/buggy.xacro'" />

  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
	args="-urdf -model robot -param robot_description -x 0 -y 0 -z 0.5"/>

  <include file="$(find robot_odom)/launch/robot_comb_odom.launch"/>

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_st_pub" >
     <remap from="joint_states" to="/gazebo/joint_states" />
  </node>

</launch>